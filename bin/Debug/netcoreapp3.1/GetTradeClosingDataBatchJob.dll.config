<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <log4net>
      <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
        <file value="D:\TradingData\每日收盤行情\"/>　<!--存放log檔案的路徑-->
        <staticLogFileName value="false"/>
        <appendToFile value="true"/>
        <rollingStyle value="Date"/>
        <datePattern value="yyyyMMdd.lo\g"/>　<!--log檔案的命名-->
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%newline%date{yyyy/MM/dd HH:mm:ss},%thread %level %message" />
        </layout>
      </appender>
      <root>
        <level value="DEBUG"/>
        <appender-ref ref="RollingFileAppender"/>
      </root>
    </log4net>
  </configSections>
  <configSections>
    <appSettings>
      <!-- 欲抓清單(逗號分隔) -->
      <add key="FollowStockCodes" value="2330,1101"/>
      <add key="BatchJobName" value="GetTradeClosingDataBatchJob"/>
    </appSettings>
    <connectionStrings>
      <add name="LocalDB" connectionString="data source=localhost;initial catalog=TradingCenter;integrated security=true;" providerName="System.Data.SqlClient" />
    </connectionStrings>
  </configSections> 
</configuration>

